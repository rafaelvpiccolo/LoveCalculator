        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_pink</item>
        <item name="colorPrimaryVariant">@color/text_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_background_pink</item>
        <item name="colorSecondaryVariant">@color/text_pink</item>
        <item name="colorOnSecondary">@color/white</item>
